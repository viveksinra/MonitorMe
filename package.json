{
  "name": "monitor-me",
  "version": "1.0.0",
  "description": "Office screen monitoring Electron app with consent-first design",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:user": "npm run dev -w @monitor-me/user-app",
    "dev:admin": "npm run dev -w @monitor-me/admin-app",
    "dev:server": "npm run dev -w @monitor-me/server",
    "start:server": "npm run start -w @monitor-me/server",
    "build": "npm run build -w @monitor-me/shared && npm run build -w @monitor-me/server && npm run build -w @monitor-me/user-app && npm run build -w @monitor-me/admin-app",
    "build:shared": "npm run build -w @monitor-me/shared",
    "build:server": "npm run build -w @monitor-me/server",
    "build:user": "npm run build -w @monitor-me/user-app",
    "build:admin": "npm run build -w @monitor-me/admin-app",
    "lint": "eslint packages --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,css}\""
  },
  "keywords": [
    "electron",
    "monitoring",
    "screen-sharing",
    "webrtc"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
